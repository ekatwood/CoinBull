    function selectAll() {

        if (!selectedAll) {

            selectedAll = true;

            for (const [key, value] of Object.entries(coins)) {

                document.getElementById("select_all").innerHTML = "Deselect All";
                document.getElementById(key).style.backgroundColor = "red";
                coins[key] = 1;

