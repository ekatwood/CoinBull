<link href="~/Content/Site.css" rel="stylesheet" />

<center>
    <h2>Add Alert</h2>

    <p>
        <select name="percent" id="percent">
            @{
                int i = 1;
                while (i <= 100)
                {

                    <option value=@i>@i%</option>

                    i++;
                }
            }
        </select> in
        <select name="minutes" id="minutes">
            @{
                int j = 5;
                while (j <= 55)
                {

                    <option value=@j>@j minutes</option>

                    j += 5;
                }

                <option value="60">1 hour</option>

                int k = 120;
                int counter = 2;
                while (k <= 1440)
                {

                    <option value=@k>@counter hours</option>

                    k += 60;
                    counter++;
                }
            }
        </select>
    </p>
    <div>
        <button id="select_all" onclick="selectAll()">Select All</button>

        @{
            foreach (string c in ViewBag.AllCoins.ToString().Split(','))
            {
                string coin = c.Trim();

                <button id=@coin onclick="updateCoins(this.id)">@coin</button>

            }
        }


        <button id="addAlert">Add Alert</button>
    </div>
</center>

<div class="modal fade modalmods" id="errorModal">
    <div class="modal-dialog">
