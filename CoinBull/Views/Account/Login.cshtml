@using CoinBull.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutNewUser.cshtml";
}

<center>
    <h2>Log In</h2>

    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <br />
        @Html.TextBoxFor(m => m.Email, new { placeholder="Email", style = "border-radius:3px; width:200px" })
        
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        <br />
        <br />
        @Html.PasswordFor(m => m.Password, new { placeholder="Password", style = "border-radius:3px; width:200px" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        <div class="checkbox">
            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe)
        </div>
        <br />
        <input type="submit" value="Log in" class="btn btn-default" />
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @* Enable this once you have account confirmation enabled for password reset functionality
            <p>
                @Html.ActionLink("Forgot your password?", "ForgotPassword")
            </p>*@
    }

</center>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}