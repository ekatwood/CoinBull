@model CoinBull.Models.RegisterViewModel
@{
    ViewBag.Title = "Create Account";
    Layout = "~/Views/Shared/_LayoutNewUser.cshtml";
}

<center>
    <h3>Create Your Account:</h3>
    <br />

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.TextBoxFor(m => m.Email, new { placeholder="Email", style="border-radius:3px; width:200px" })
        <br />
        <br />
        @Html.PasswordFor(m => m.Password, new { placeholder="Password", style = "border-radius:3px; width:200px" })
        <br />
        <br />
        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder="Confirm Password", style = "border-radius:3px; width:200px" })
        <br />
        <br />
        <br />

        <input id="Coins" name="Coins" type="hidden" value=@TempData["Coins"] />
        <input id="Percent" name="Percent" type="hidden" value=@TempData["Percent"] />
        <input id="Minutes" name="Minutes" type="hidden" value=@TempData["Minutes"] />

        <input type="submit" class="btn btn-default" value="Register" />
        <br />

        @Html.ValidationSummary("", new { @class = "text-danger" })
    }
</center>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
